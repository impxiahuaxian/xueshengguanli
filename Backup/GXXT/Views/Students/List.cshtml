@model MVC.PagedList<Maticsoft.Model.Students>
@using  MVC;

    <table class="tablelist"  >
    	<thead>
    	<tr>
        <th>序号<i class="sort"><img src="/Content/images/px.gif" /></i></th>        
                 <th>身份证号</th>
             <th>姓名</th>
             <th>性别</th>
             <th>年龄</th>
             <th>电话</th>
             <th>现住址</th>
             <th>年制</th>
      <th>专业</th>
            <th>学历
             <th>毕业院校</th>
        <th>操作</th>
        </tr>
        </thead>
        <tbody>
              @if (Model != null && Model.Count > 0)
{
    int i = 0; 
       
            foreach (var item in Model)
        {
            i++;    
        <tr>
        <td>@i</td>
         
             <td>@item.UserSFZ</td>
            <td>@item.Name</td>
             <td>@item.Sex</td>
             <td>@item.Age</td>
             <td>@item.Phone</td>
             <td>@item.Str1</td>
             <td>@item.IsJQSG</td>
              <td>@item.IsJDLK</td>
              <td>@item.IsYXQ</td>
            <td>@item.IsZJ
            </td>
        <td>
            @{
    string UserName = Maticsoft.BLL.Users.GetUsersName();
    string UserType ="";
    if (UserName.Substring(0,3)=="管理员")
    {
        UserType = "管理员";
    }
    else
    {
        UserType = "用户";
    }
    }
@if (UserType == "管理员")
{
            
            <a href="/Students/Create?ID=@item.ID"   >修改</a> 
            <a href="#" onclick="Del(@item.ID)"   >删除</a> 
}
            <a href="/Students/KCreate?ID=@item.ID"   >查看</a> 
        </td>
        </tr>    
            }
} 
        </tbody>
    </table>
    
 <div class="pagination pagination-centered">
    	  @Html.Pager(Model, new PagerOptions { ShowFirstLast = false, PrevPageText = "上一页", NextPageText = "下一页", AlwaysShowFirstLastPageNumber = true }, "Paged", new { action = "Manage" })
    </div>

    

