@model MVC.PagedList<Maticsoft.Model.Orders>
@using MVC
@{
    Layout = null;
}

<div class="schedule clearfloat">
    @foreach (var item in Model)
    {
        <div class="content clearfloat box-s">
            <div class="list clearfloat fl box-s">
                <a href="/Wap/Detail?id=@item.UID">

                    <div class="right clearfloat" style="float: left;">
                        <div class="tit clearfloat">
                            <p class="fl">@item.GoodName</p>

                        </div>
                         <p class="recom-jianjie">订单号：@item.Str3
                         </p>
                        <p class="recom-jianjie">出租人：@item.UserName  </p>
                        <p class="recom-jianjie">出租电话：@item.UsersPhone  </p>
                        <p class="recom-jianjie">租客：@item.PName</p>
                        <p class="recom-jianjie">租客电话：@item.PPhone  </p>
                        <p class="recom-jianjie">交易地点：@item.Str2  </p>
                        <p class="recom-jianjie">状态：@item.Str1  </p>
                        <p class="recom-jianjie">开始日期：@item.StartTime </p>
                        <p class="recom-jianjie">结束日期：@item.EndTime </p>
                        <p class="recom-jianjie">总价：@item.TotalPrice </p>
                    </div>

                </a>
            </div>
        </div>	
      
        <div class="topsche-top entrust box-s clearfloat">
            @if (item.Str1 == "已付款")
            {
                <p class="tit fr entrust-btn" onclick="DelUsers(this)" id="@item.ID">
                    取消
                </p>
                if (Maticsoft.BLL.Users.GetNowUserID()==item.UserID)
                {
                      <p class="tit fr entrust-btn entrust-btntwo" onclick="fh(this)" orderid="@item.ID">
                    确认发货
                </p>
                }
            }
            else if (item.Str1 == "已发货")
            {
            if (Maticsoft.BLL.Users.GetNowUserID()==item.PUserID)
                {
                      <p class="tit fr entrust-btn entrust-btntwo" onclick="sh(this)" orderid="@item.ID">
                    确认收货
                </p>
                }
            }
             else if (item.Str1 == "已收货")
            {
            if (Maticsoft.BLL.Users.GetNowUserID()==item.PUserID)
                {
                      <p class="tit fr entrust-btn entrust-btntwo" onclick="wc(this)" orderid="@item.ID">
                    共享完成
                </p>
                }
            }
            else if (item.Str1 == "已取消")
            {

            }
            else
            {
               
            }



        </div>
		    	
    }
</div>
<div class="pagination pagination-centered" style="font-size: small;">

    @Html.Pager(Model, new PagerOptions { ShowFirstLast = false, PrevPageText = "上一页", NextPageText = "下一页", AlwaysShowFirstLastPageNumber = true }, "Paged", new { action = "mmanage" })
</div>
