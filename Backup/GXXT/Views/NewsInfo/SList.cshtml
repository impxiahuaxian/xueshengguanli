@model MVC.PagedList<Maticsoft.Model.Enjoys>
@using MVC;

    <table class="tablelist"  >
    	<thead>
    	<tr>
        <th>序号<i class="sort"><img src="/Content/images/px.gif" /></i></th>        
                 <th>头像</th>
             <th>姓名</th>
           <th>领域</th>
          
           
      
        <th>操作</th>
        </tr>
        </thead>
        <tbody>
              @if (Model != null && Model.Count > 0)
{
    int i = 0; 
       Maticsoft.BLL.Users bll=new Maticsoft.BLL.Users();
            foreach (var item in Model)
        {
            i++;
            Maticsoft.Model.Users model2 = bll.GetModel(Convert.ToInt32(item.UID));  
        <tr>
        <td>@i</td>
         
             <td><img src="/Scripts/kindeditor/attached/image/@model2.PicID" style="height:100px;width:100px;" /></td>
         
             <td>@model2.UserName</td>
      <td>@model2.Major</td>
           <td> <a href="#" onclick="Del(@item.ID)"   >取消关注</a> 
               <a href="/Home/List?UserID=@item.UID"  target="_blank"   >看他的新闻</a> 
           
        </td>
        </tr>    
            }
} 
        </tbody>
    </table>
    
 <div class="pagination pagination-centered">
    	  @Html.Pager(Model, new PagerOptions { ShowFirstLast = false, PrevPageText = "上一页", NextPageText = "下一页", AlwaysShowFirstLastPageNumber = true }, "Paged", new { action = "Manage" })
    </div>

    

