<script type="text/ecmascript">
    function subregist() {

        var UserSFZ = $("#UserSFZ").val();
        if (UserSFZ=="") {
            alert("请输入身份证信息");
        }
        else {
            $.ajax({
                type: "post",
                traditional: true,
                url: "/Students/GetStu",
                data: { UserSFZ: UserSFZ },
                datatpye: "json",
                success: function (data) {
                    if (!data) {
                        alert("未查询到信息！");
                    }
                    else {
                      
                        window.location = "/Home/CJXX?UserSFZ=" + UserSFZ;
                    }
                }
            });
           
        }
      
    }

    function checkPhone() {
        var phone = document.getElementById('UsersName').value;
