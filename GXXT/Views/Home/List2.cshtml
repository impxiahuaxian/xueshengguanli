@model MVC.PagedList<Maticsoft.Model.LeaveMessage>
@using MVC;

    <table class="tablelist">
        <thead>
            <tr>
                <th>序号<i class="sort"><img src="/Content/images/px.gif" /></i></th>
                <th>标题</th>
                <th>内容</th>
                <th>时间</th>
                <th>用户ID</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                int i = 0;

                foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.UserName</td>
                        <td>@item.Context</td>
                        <td>@item.Time</td>
                        <td>@item.UserID</td>
                        <td>
                            <a href="/Home/Create?ID=@item.ID">修改</a>
                            <a href="#" onclick="Del(@item.ID)">删除</a>

                        </td>
                    </tr>

                }
            }
        </tbody>
    </table>

    <div class="pagination pagination-centered">
        @Html.Pager(Model, new PagerOptions { ShowFirstLast = false, PrevPageText = "上一页", NextPageText = "下一页", AlwaysShowFirstLastPageNumber = true }, "Paged", new { action = "Manage" })
    </div>



