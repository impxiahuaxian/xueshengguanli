<script type="text/ecmascript">
    $(function () {
        $.ajax({
            type: "post",
            traditional: true,
            url: "/Wap/GetStu",
            datatpye: "json",
            success: function (data) {
                $("#iptmajor").val(data.Major);
                $("#iptclass").val(data.Class);
                $("#iptsex").val(data.Sex);
                $("#iptage").val(data.Age);
                $("#iptname").val(data.Name);
                $("#iptphone").val(data.Phone);
            }
        });
    });
    function Edit() {
        var PassWord = $("#iptpassword").val();
        var ComPassWord = $("#iptcomf").val();
        if (PassWord!=""&&(PassWord.length < 6 || PassWord.length > 20)) {
            alert("密码长度必须在6-20位数之间！");
            return;
        }
        if (PassWord != ComPassWord) {
            alert("两次密码输入不一致！");
            return;
        }
        $.ajax({
            type: "post",
            traditional: true,
            url: "/Wap/EditPassword",
            data: { Major: $("#iptmajor").val(), Class: $("#iptclass").val(), Sex: $("#iptsex").val(), Age: $("#iptage").val(), Name: $("#iptname").val(), Phone: $("#iptphone").val(), StuPSD: PassWord },
            datatpye: "json",
            success: function (data) {
                alert("保存成功！");
                window.location="/Wap/mindex"
            }
        });
    }
</script>