<script type="text/ecmascript">
    function DelUsers(obj) {
        if (confirm("确定取消订单吗？")) {
            var ID = $(obj).attr("id");
            $.ajax({
                type: "post",
                traditional: true,
                url: "/Wap/DelOrder",
                data: { ID: ID },
                datatpye: "json",
                success: function (data) {
                    if (data) {
                        alert("取消成功！")
                        window.location.reload();
                    }
                   
                }
            });
        }
    }

